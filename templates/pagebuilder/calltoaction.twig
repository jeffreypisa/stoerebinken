<section class="section{{ sectionno }} mod-calltoaction bg-white">
	<div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-10 offset-lg-1">
      	<div class="balloon text-center d-flex flex-column align-items-center" style="background: linear-gradient(
	    rgba(0, 27, 74, 0.8),
      rgba(0, 172, 255, 0.8) 
    ), url({{ Image(item.afbeelding).src|resize(768) }}); background-size: cover; background-position: center center" data-aos="fade-up" data-aos-duration="800">
    			<img class="corner" src="{{ theme.link }}/assets/images/balloon_corner.svg" alt="balloon_corner">
    			<div class="arrow"></div>
		      {% if item.titel %}
		        <h3 class="text-center">{{ item.titel }}</h2>
		      {% endif %}
		    	{% if item.tekst %}
		      	{{ item.tekst }}
		      {% endif %}
				</div>
				{% if item.knop %}
					<br>
					<div class="text-center">
						<a class="btn {% if item.achtergrond == 'color' or item.achtergrond == 'darkblue' %} btn-light {% else %} btn-primary {% endif %}" target="{{ item.knop.target }}" href="{{ item.knop.url }}">
							{{ item.knop.title }} 
						</a>
					</div>
		    {% endif %}
			</div> 
		</div>
  </div>
</section>