<section class="section{{ sectionno }} mod-reviews bg-{{ item.achtergrond }}">
	<div class="container">
		{% if item.titel %}
			<div class="row mb-4">
				<div class="col-md-10 col-lg-8 offest-md-1 offset-lg-2 text-center">
					<h2>{{ item.titel }}</h2>
				</div>
			</div>
		{% endif %}
		<div class="reviews row" data-masonry='{"percentPosition": true }'>
			{% for item in item.reviews %}
				<div class="col-12 col-md-6 col-lg-4">
					{% include 'tease-review.twig' %}
				</div>
			{% endfor %}
		</div>
	</div>
</section>