<section class="section{{ sectionno }} mod-quote bg-{{item.achtergrond}}">
	<div class="container">
	  <div class="row">
			<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
				<div class="quote">
					<span class="h2"> <i class="fas fa-quote-left"></i> </span>
					{% if item.titel %}
			      <h3>{{ item.titel }}</h3>
			    {% endif %}
			    {% if item.tekst %}
		    		<span class="lead">{{ item.tekst }}</span>
		    	{% endif %}
				</div>
	    	{% if item.klant %}
	    		<span class="klant">
	    		<a class="float-left" target="{{ item.klant.target }}" href="{{ item.klant.url }}">
						{{ item.klant.title }} 
					</a> <span class="d-none d-md-inline">-</span> <span class="d-md-none"> <br> </span> {{ item.klant_functie }}
	    		</span>
				{% endif %} 
			</div>
		</div>
  </div>     
</section>