{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<div class="article-body">
			  {% include 'partials/pageheader-single.twig' %}
			  <section class="blog bg-white">
					<div class="container">
						<div class="row">
						  <div class="col-md-8">
						    <h1 class="h1xl">{{ post.title }}</h1>
						  </div>
						  <div class="col-md-4">
								{% include 'partials/author.twig' %}
							</div>
						</div>
						<div class="row">
							<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
							  {{ post.content }}
							</div>
						</div>
					</div>
			  </section>
			  {% include 'pagebuilder.twig' %}
			  {% include 'partials/nextprev.twig' %}
			</div>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}