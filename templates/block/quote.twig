{#
/**
 * Block Name: Quote
 *
 * This is the template that displays the example block.
 */
#}

<div id="block-{{ block.id }}" class="gb-quote">
	<div class="quote">
		<span class="h2"> <i class="fas fa-quote-left"></i> </span>
		{% if fields.titel %}
      <h3>{{ fields.titel }}</h3>
    {% endif %}
    {% if fields.tekst %}
  		<span class="lead">{{ fields.tekst }}</span>
  	{% endif %}
	</div>
	{% if fields.klant %}
		<span class="klant">
			<a class="float-left" target="{{ fields.klant.target }}" href="{{ fields.klant.url }}">
				{{ fields.klant.title }} 
			</a> {% if fields.klant_functie %} <span class="d-none d-md-inline">-</span> <span class="d-md-none"> <br> </span> {{ fields.klant_functie }} {% endif %}
		</span>
	{% endif %} 
</div>

<style type="text/css">
  #block-{{ block.id }} {
  }
</style>