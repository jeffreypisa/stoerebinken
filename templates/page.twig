{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
	  {% if post.content %}
		  <section class="bg-white">
				<div class="container">
				  <h1>{{ post.title }}</h1>
				  {{ post.content }}
				</div>
		  </section>
		{% else %}
			<h1 class="d-none">{{ post.title }}</h1>
		{% endif %}
	  {% include 'pagebuilder.twig' %}
	</article>
{% endblock %}